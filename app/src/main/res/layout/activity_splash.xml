<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/iv_splash"
        android:layout_height="@dimen/iv_splash"
        android:src="@drawable/moon_shadow"
        android:layout_centerInParent="true"
        android:id="@+id/iv_splash"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_splash" >

        <ProgressBar
            android:layout_width="@dimen/pb_splash"
            android:layout_height="@dimen/pb_splash"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/txt_splash"
            android:text="@string/txt_splash"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"/>


    </LinearLayout>


</RelativeLayout>